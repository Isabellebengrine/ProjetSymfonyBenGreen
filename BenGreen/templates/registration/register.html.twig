{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="text-info text-center">Inscription</h1>

    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'}) }}
        {{ form_row(registrationForm.agreeTerms, {'label': 'Acceptez nos termes et conditions'}) }}

        <button type="submit" class="btn btn-info">Inscription !</button>
    {{ form_end(registrationForm) }}

    <p class="text-warning mt-5"><b>Déjà inscrit? </b></p>
    <a href="{{ path('login') }}" class="btn btn-info w-100">Se connecter</a>

{% endblock %}
