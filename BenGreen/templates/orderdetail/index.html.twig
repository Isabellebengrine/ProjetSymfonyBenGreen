{% extends 'base.html.twig' %}

{% block title %}Orderdetail index{% endblock %}

{% block body %}
    <h1>Orderdetail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>OrderdetailPrice</th>
                <th>OrderdetailQuantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orderdetail in orderdetails %}
            <tr>
                <td>{{ orderdetail.id }}</td>
                <td>{{ orderdetail.orderdetailPrice }}</td>
                <td>{{ orderdetail.orderdetailQuantity }}</td>
                <td>
                    <a href="{{ path('orderdetail_show', {'id': orderdetail.id}) }}">show</a>
                    <a href="{{ path('orderdetail_edit', {'id': orderdetail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('orderdetail_new') }}">Create new</a>
{% endblock %}
