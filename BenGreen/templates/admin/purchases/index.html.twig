{% extends 'admin.html.twig' %}

{% block title %}Achats fournisseurs{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-sm-6">
            <h1 class="text-info">Liste des Achats</h1>
        </div>
        <div class="col-12 col-sm-6">
            <a href="{{ path('admin_purchases_new') }}" class="btn btn-danger mb-5">Ajouter un nouvel Achat</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Réf.</th>
                <th>Article</th>
                <th>Fournisseur</th>
                <th  colspan="3" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purchase in purchases %}
            <tr>
                <td>{{ purchase.id }}</td>
                <td>{{ purchase.products }}</td>
                <td>{{ purchase.suppliers }}</td>
                <td>
                    <a href="{{ path('admin_purchases_show', {'id': purchase.id}) }}" class="btn btn-success">Détails</a>
                </td>
                <td>
                    <a href="{{ path('admin_purchases_edit', {'id': purchase.id}) }}" class="btn btn-info">Modifier</a>
                </td>
                <td>
                    {{ include('admin/purchases/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
