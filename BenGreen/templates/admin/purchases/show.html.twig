{% extends 'admin.html.twig' %}

{% block title %}Achats{% endblock %}

{% block body %}
    <h1 class="text-info">Détails de cet Achat :</h1>

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Référence</th>
                <td>{{ purchase.id }}</td>
            </tr>
            <tr>
                <th>Réf. Fournisseur</th>
                <td>{{ purchase.purchasesSuppliersref }}</td>
            </tr>
            <tr>
                <th>Nom Fournisseur</th>
                <td>{{ purchase.suppliers }}</td>
            </tr>
            <tr>
                <th>Article</th>
                <td>{{ purchase.products }}</td>
            </tr>
            <tr>
                <th>Date d'achat</th>
                <td>{{ purchase.purchasesDate ? purchase.purchasesDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix d'achat</th>
                <td>{{ purchase.purchasesPrice }}</td>
            </tr>
            <tr>
                <th>Quantitée achetée</th>
                <td>{{ purchase.purchasesQuantity }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-4 col-sm-4">
            <a href="{{ path('admin_purchases_home') }}" class="btn btn-success mx-auto">Retour à la Liste Achats</a>
        </div>
        <div class="col-4 col-sm-4">
            <a href="{{ path('admin_purchases_edit', {'id': purchase.id}) }}" class="btn btn-info mx-auto">Modifier cet Achat</a>
        </div>
        <div class="col-4 col-sm-4">
            {{ include('admin/purchases/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
