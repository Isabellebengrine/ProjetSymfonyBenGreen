{% extends 'admin.html.twig' %}

{% block title %}Fournisseurs{% endblock %}

{% block body %}
    <h1 class="text-info">Fournisseurs - Détails :</h1>

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supplier.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ supplier.suppliersName }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ supplier.suppliersAddress }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ supplier.suppliersZipcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ supplier.suppliersCity }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ supplier.suppliersPhone }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ supplier.supplierstype }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-4 col-sm-4">
            <a href="{{ path('admin_suppliers_home') }}" class="btn btn-success mx-auto">Retour à la liste</a>
        </div>
        <div class="col-4 col-sm-4">
            <a href="{{ path('admin_suppliers_edit', {'id': supplier.id}) }}" class="btn btn-info mx-auto">Modifier</a>
        </div>
        <div class="col-4 col-sm-4">
            {{ include('admin/suppliers/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
