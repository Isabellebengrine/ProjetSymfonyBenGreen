{% extends 'admin.html.twig' %}

{% block title %}Fournisseurs{% endblock %}

{% block body %}
    <h1>Fournisseurs - Détails :</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supplier.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ supplier.suppliersName }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ supplier.suppliersAddress }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ supplier.suppliersZipcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ supplier.suppliersCity }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ supplier.suppliersPhone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_suppliers_home') }}">Retour à la liste</a>

    <a href="{{ path('admin_suppliers_edit', {'id': supplier.id}) }}">Modifier</a>

    {{ include('admin/suppliers/_delete_form.html.twig') }}
{% endblock %}
