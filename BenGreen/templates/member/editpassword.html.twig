{% extends 'member.html.twig' %}

{% block title %}Modification du mot de passe de {{ app.user.firstname }} {{ app.user.lastname }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-12 col-sm-12">
        <h1 class="text-info text-center">Modification du mot de passe</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger my-3">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post">
            <fieldset>
                <div class="form-group">
                    <label for="pass">Mot de passe</label>
                    <input type="password" class="form-control" id="pass" name="pass">
                </div>
                <div class="form-group">
                    <label for="pass2">Confirmer le mot de passe</label>
                    <input type="password" class="form-control" id="pass2" name="pass2">
                </div>
            </fieldset>
            <button type="submit" class="btn btn-info">Valider</button>
        </form>
    </div>
</div>

{% endblock %}


{% block javascripts %}
{% endblock %}
