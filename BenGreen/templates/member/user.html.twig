{% extends 'member.html.twig' %}

{% block title %}Compte de {{ app.user.firstname }} {{ app.user.lastname }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-12 col-sm-12">
        <h1 class="text-info text-center">Votre Compte</h1>
        {% for message in app.flashes('message') %}
