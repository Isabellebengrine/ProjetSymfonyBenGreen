{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.productsName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.productsDescription }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.productsStock }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ product.productsPicture }}" alt="Photo" width="20%"></td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.productsStatus ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.productsPrice }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('products_index') }}">back to list</a>

    <a href="{{ path('products_edit', {'id': product.id}) }}">edit</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock %}
