<div class="card">
    <img src="{{ product.productsPicture }}" class="card-img-top" alt="Image du produit" title="Image du produit">
    <div class="card-body">
        <h5 class="card-title text-info">{{ product.productsName }}</h5>
        <div class="card-title text-white" style="font-weight: bold; font-size: 1.5rem">{{ product.productsPrice | number_format(2, ',', ' ') }} â‚¬</div>
        <p class="text text-muted">{{ product.productsDescription }}</p>
        <div>
            <em class="text text-success">{{ product.rubrique }}</em>
        </div>
    </div>
    <div class="card-footer d-flex flex-row justify-content-between">
        <a href="{{ path('products_show', {'id': product.id}) }}" class="btn btn-info card-link text-white" role="button">Voir</a>
        <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-dark card-link text-white" role="button"><i class="fas fa-shopping-cart"></i></a>
    </div>

</div>